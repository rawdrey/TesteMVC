@model ClienteModel

@{
    ViewData["Title"] = "Adicionar Cliente";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AddCliente" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CPF"></label>
        <input asp-for="CPF" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" />
    </div>
    <a class="btn btn-secondary" style="background-color: purple; border-color: purple;" asp-controller="Home" asp-action="ListaCliente">
        <i class="fas fa-times"></i> Cancelar
    </a>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Salvar
    </button>
</form>

<p>
    <a asp-action="ListaCliente" class="btn btn-secondary">
        <i class="fas fa-list"></i> Ver Clientes
    </a>
</p>
